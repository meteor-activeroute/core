{
  "env": {
    "browser": true,
    "meteor": true,
    "node": true
  },
  "extends": [
    "airbnb",
    "plugin:meteor/recommended"
  ],
  "plugins": [
    "meteor"
  ],
  "rules": {
    "new-cap": [ 2, {
      "capIsNewExceptions": [
        "Match.Any", "Match.Object", "Match.ObjectIncluding",
        "Match.OneOf", "Match.Optional", "Match.Where", "Match.Integer",
        "Match.Maybe"
      ]
    }],
    "meteor/eventmap-params": [ 2, {
      "templateInstanceParamName": "instance"
    }],
    "import/no-unresolved": [ 2, {
      "ignore": ["^meteor/"]
    }]
  }
}
